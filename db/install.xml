<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/mooproof/db" VERSION="20251103" COMMENT="XMLDB file for Moodle mod/mooproof"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="mooproof" COMMENT="MooProof resource instances">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Course ID"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="Resource name"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Resource description"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Intro format"/>
        <FIELD NAME="gradelevel" TYPE="char" LENGTH="2" NOTNULL="true" DEFAULT="9" SEQUENCE="false" COMMENT="Grade level for proofing (3-12)"/>
        <FIELD NAME="proofinstructions" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Custom proofing instructions"/>
        <FIELD NAME="ratelimit_enable" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Enable rate limiting"/>
        <FIELD NAME="ratelimit_period" TYPE="char" LENGTH="10" NOTNULL="true" DEFAULT="day" SEQUENCE="false" COMMENT="Rate limit period (hour/day)"/>
        <FIELD NAME="ratelimit_count" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="5" SEQUENCE="false" COMMENT="Max submissions per period"/>
        <FIELD NAME="maxwords" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="5000" SEQUENCE="false" COMMENT="Maximum words allowed"/>
        <FIELD NAME="chatmessagelimit" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="10" SEQUENCE="false" COMMENT="Maximum chat messages per submission"/>
        <FIELD NAME="temperature" TYPE="char" LENGTH="10" NOTNULL="true" DEFAULT="0.5" SEQUENCE="false" COMMENT="AI temperature"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Time created"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Time modified"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="course" TYPE="foreign" FIELDS="course" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="mooproof_usage" COMMENT="Tracks student usage of MooProof resources">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="mooproofid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="MooProof resource ID"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="User ID"/>
        <FIELD NAME="submissioncount" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Number of submissions"/>
        <FIELD NAME="firstsubmission" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Timestamp of first submission in period"/>
        <FIELD NAME="lastsubmission" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Timestamp of last submission"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="mooproofid" TYPE="foreign" FIELDS="mooproofid" REFTABLE="mooproof" REFFIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="mooproofid-userid" UNIQUE="true" FIELDS="mooproofid, userid"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="mooproof_submissions" COMMENT="Stores MooProof paper submissions and feedback">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="mooproofid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="MooProof resource ID"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="User ID"/>
        <FIELD NAME="papertext" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="Submitted paper text"/>
        <FIELD NAME="feedback" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="AI feedback"/>
        <FIELD NAME="filename" TYPE="char" LENGTH="255" NOTNULL="false" SEQUENCE="false" COMMENT="Original filename if uploaded"/>
        <FIELD NAME="wordcount" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Word count of submission"/>
        <FIELD NAME="gradelevel" TYPE="char" LENGTH="2" NOTNULL="true" SEQUENCE="false" COMMENT="Grade level used for proofing"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Time submitted"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="mooproofid" TYPE="foreign" FIELDS="mooproofid" REFTABLE="mooproof" REFFIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="mooproofid-userid" UNIQUE="false" FIELDS="mooproofid, userid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
